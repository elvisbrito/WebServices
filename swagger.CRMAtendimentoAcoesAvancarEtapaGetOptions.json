swagger: "2.0"
info:
  version: 1.0.0
  title: Exemplo de Documentação Swagger
paths:
  /api/exemplo:
    post:
      summary: Exemplo de API
      description: Executa uma ação com base no JSON fornecido
      consumes:
        - application/json
      produces:
        - application/json
      parameters:
        - in: body
          name: body
          description: JSON de entrada
          required: true
          schema:
            $ref: "#/definitions/InputPayload"
          example:
            $ref: "#/examples/InputExample"
      responses:
        200:
          description: Sucesso
        400:
          description: Requisição inválida
        500:
          description: Erro interno do servidor
definitions:
  InputPayload:
    type: object
    properties:
      id:
        type: string
      operation:
        type: integer
      models:
        type: array
        items:
          $ref: "#/definitions/Model"
  Model:
    type: object
    properties:
      id:
        type: string
      modeltype:
        type: string
      fields:
        type: array
        items:
          $ref: "#/definitions/Field"
  Field:
    type: object
    properties:
      id:
        type: string
      order:
        type: integer
      value:
        type: string
examples:
  InputExample:
    value:
      id: AGRA045
      operation: 3
      models:
        - id: NNRMASTER
          modeltype: FIELDS
          fields:
            - id: NNR_CODIGO
              order: 2
              value: "01"
            - id: NNR_DESCRI
              order: 3
              value: "ARMAZEM-1x"
